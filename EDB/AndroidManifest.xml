<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.advancementbureau.edb"
    android:versionCode="2"
    android:versionName="0.1.1" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name" android:debuggable="true" android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        <activity
            android:name=".EDBSplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="EDBChangelogActivity" android:icon="@drawable/time" android:label="@string/changelog"></activity>
        <activity android:name="EDBActivity"></activity>
        <activity android:name="EDBHelpActivity" android:icon="@drawable/help" android:label="@string/help"></activity>
    </application>

</manifest>